{
  "extends": "airbnb",

  "env": {
    "mocha": true
  },

  "rules": {
    "no-use-before-define": [2, "nofunc"],
    "no-console": 0,
    "object-shorthand": 0,
    "arrow-body-style": 0,
    "no-nested-ternary": 0,
    "max-len": [2, 120],
    "class-methods-use-this": 0,
    "arrow-parens": [2, "always"],

    "import/prefer-default-export": 0,
    "import/no-extraneous-dependencies": 0
  }
}
